<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dashboard_card_view">
        <item name="android:layout_width">@dimen/dashboard_card_width</item>
        <item name="android:layout_height">@dimen/dashboard_card_height</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="elevation">5dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_secondaryContainer</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dashboard_card_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottom_nav_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/toolbar_bottom</item>
    </style>


    <style name="category_row_card">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeWidth">1dp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
